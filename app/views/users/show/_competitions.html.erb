<div class="tab-pane" id="competitions">

  <% if @user.competitions.any? %>
    <ul class="list-group">
      <% @user.competitions.each do |comp| %>
        <li class="list-group-item"><%= comp.competition %></li>
      <% end %>
    </ul>
  <% else %>
    <br/>
    <h3><%= @user.name %> has not yet entered any competitions.</h3>
  <% end %>

</div>
