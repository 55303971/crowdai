<div class="tab-pane" id="activity">
  <br/>
  <% if @user.posts.any? %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3>Discussions</h3>
        <ul class="list-group">
          <% @user.posts.each do |post| %>
            <li class="list-group-item"><%= markdown(post.post) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% else %>
    <br/>
    <h3><%= @user.name %> has not yet made any posts.</h3>
  <% end %>
</div>
