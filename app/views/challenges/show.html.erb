<div class='content'>
  <%= concept(Challenge::Cell::ChallengeMasthead, @challenge, current_participant: current_participant) %>
  <%= concept(Challenge::Cell::ChallengeSubnav, @challenge, current_participant: current_participant) %>

  <div class="row">
    <div class="article">

      <% if @challenge.description %>
        <h2>Overview</h2>
        <div class='markdown-wrap'>
          <%= sanitize(@challenge.description) %>
        </div>
      <% end %>

      <% if @challenge.evaluation %>
        <h2>Evaluation</h2>
        <div class='markdown-wrap'>
          <%= sanitize(@challenge.evaluation) %>
        </div>
      <% end %>

      <% if @challenge.rules %>
        <h2>Rules</h2>
        <div class='markdown-wrap'>
          <%= sanitize(@challenge.rules) %>
        </div>
      <% end %>

      <% if @challenge.prizes %>
        <h2>Prizes</h2>
        <div class='markdown-wrap'>
          <%= sanitize(@challenge.prizes) %>
        </div>
      <% end %>

      <% if @challenge.resources %>
        <h2>Resources</h2>
        <div class='markdown-wrap'>
          <%= sanitize(@challenge.resources) %>
        </div>
      <% end %>

      <% if @challenge.eua_file.file.present? %>
        <h2>End User Agreement</h2>
        <div class='markdown-wrap'>
          <%= link_to image_tag("misc/pdf-icon.png",:class => 'pdf-icon'), @challenge.eua_file.file.url %>
        </div>
      <% end %>

    </div>
  </div>
</div>
