<li>
  <%= link_to challenge_path(challenge) do %>
    <div class="row">
      <div class="col-xs-3 col-md-2">
        <div class="challenge-list-image">
          <%= image_tag image_medium_url(Challenge.find(challenge.id)),  class: "img-circle" %>
        </div>
      </div>
      <div class="col-xs-7 col-md-10">
        <h3><%= challenge.challenge %></h3>

        <div class="challenge-list-detail">
          <span class="challenge-badge <%= challenge.status_cd %>"><%= challenge.status_cd %></span>
          <span>&ensp;</span>
          <span class="glyphicon glyphicon-eye-open"></span> <%= pluralize(challenge.page_views, ' view') %>&ensp; | &ensp;
          <span class="glyphicon glyphicon-user"></span>
          <%= challenge.participant_count %>
          &ensp; | &ensp;
          <span class="glyphicon glyphicon-list-alt"></span> <%= pluralize(challenge.submission_count, 'submission') %>
        </div>
      </div>
    </div>
  <% end %>
</li>
