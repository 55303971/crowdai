<div role="tabpanel" class="tab-pane" id="rules">
  <h1>Rules</h1>

  <div class="markdown-editor">
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active">
        <a href="#editor-pane-rules" data-toggle="tab">Write</a>
      </li>
      <li>
        <a href="#preview-pane-rules" class="preview-pane-link" data-toggle="tab">Preview</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="editor-pane-rules">
        <%= f.label 'Rules' %>
        <%= render 'markdown_editor/toolbar' %>
        <%= f.text_area :rules_markdown,
                        class: 'form-control markdown-textarea',
                        placeholder: 'Describe the rules which apply to this challenge.',
                        required: true,
                        rows: 30 %>
      </div>
      <div class="tab-pane markdown-preview-pane" id="preview-pane-rules">
        <div id="markdown-preview-rules"></div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary outline' %>
  </div>
</div>
