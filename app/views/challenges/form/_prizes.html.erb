<div role="tabpanel" class="tab-pane" id="prizes">
  <h2>Prizes</h2>

  <div class="markdown-editor">
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active">
        <a href="#editor-pane-prizes" data-toggle="tab">Write</a>
      </li>
      <li>
        <a href="#preview-pane-prizes" class="preview-pane-link" data-toggle="tab">Preview</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="editor-pane-prizes">
        <%= f.label 'Prizes' %>
        <%= render 'markdown_editor/toolbar' %>
        <%= f.text_area :prizes_markdown,
                        class: 'form-control markdown-textarea',
                        placeholder: 'Describe the prizes for this challenge.',
                        required: true,
                        rows: 10 %>
      </div>
      <div class="tab-pane markdown-preview-pane" id="preview-pane-prizes">
        <div id="markdown-preview"></div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <br/>
    <%= f.button :submit, class: 'btn btn-primary outline' %>
  </div>
</div>
