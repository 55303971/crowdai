<div role="tabpanel" class="tab-pane" id="resources">
  <h1>Resources</h1>

  <div class="markdown-editor">
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active">
        <a href="#editor-pane-resources" data-toggle="tab">Write</a>
      </li>
      <li>
        <a href="#preview-pane-resources" class="preview-pane-link" data-toggle="tab">Preview</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="editor-pane-resources">
        <%= f.label 'Resources' %>
        <%= render 'markdown_editor/toolbar' %>
        <%= f.text_area :resources_markdown,
                        class: 'form-control markdown-textarea',
                        placeholder: 'Describe the resources available to this challenge.',
                        required: true,
                        rows: 20 %>
      </div>
      <div class="tab-pane markdown-preview-pane" id="preview-pane-resources">
        <div id="markdown-preview"></div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
</div>
