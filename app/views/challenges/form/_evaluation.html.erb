<div class="row">
  <%= form_for @challenge, html: { class: "dbl-col" } do |f| %>
  <fieldset>
    <div class="twin-container">
      <div class="twin-field">
        <label>Grader</label>
        <select>
          <option value="" disabled selected hidden>Please select&hellip;</option>
          <option></option>
          <option></option>
          <option></option>
        </select>
      </div>
      <div class="twin-field">
        <div class="btn-icon">
          <button class="btn btn-primary">Re-grade</button>
        </div>
      </div>
    </div>
  </fieldset>
  <fieldset class="checkbox">
    <div>
      <%= f.check_box :automatic_grading, {}, "true", "false" %>
      <label for="">Automatic grading</label>
    </div>
    <div>
      <%= f.check_box :media_on_leaderboard, {}, "true", "false" %>
      <label for="">Media on leaderboard</label>
    </div>
  </fieldset>
  <div class="twin-container">
    <div class="twin-field">
      <label>Grading factor</label>
      <%= f.text_field :grading_factor %>
    </div>
    <div class="twin-field">
      <label>Threshold</label>
      <%= f.text_field :threshold %>
    </div>
  </div>
  <label>Answer file</label>
  <div class="upload">
    <input class="file-upload" type="file" accept="all">
  </div>
  <div class="twin-container">
    <div class="twin-field">
      <label>Primary score title</label>
      <%= f.text_field :score_title %>
    </div>
    <div class="twin-field">
      <label>Sort order</label>
      <select>
        <option value="ascending">Ascending</option>
        <option value="descending">Descending</option>
      </select>
    </div>
  </div>
  <div class="twin-container">
    <div class="twin-field">
      <label>Secondary score title</label>
      <%= f.text_field :score_secondary_title %>
    </div>
    <div class="twin-field">
      <label>Sort order</label>
      <select>
        <option value="ascending">Ascending</option>
        <option value="descending">Descending</option>
      </select>
    </div>
  </div>
  <label>Evaluation Criteria</label>
  <%= markdown_editor("description_markdown") do |m| %>
    <%= f.text_area :evaluation_markdown, class: "txt-med" %>
  <% end %>
</div>
<div class="button-group">
  <%= f.submit (f.object.new_record? ? "Create Challenge" : "Update Challenge"), class: 'btn btn-primary' %>
  <%= link_to 'Cancel', '/', class: "btn btn-secondary" %>
</div>
</fieldset>
<% end %>
</div>
