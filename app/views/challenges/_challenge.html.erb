<li>
  <%= link_to challenge_path(challenge) do %>
    <div class="row">
      <div class="col-xs-3 col-md-2">
        <div class="challenge-list-image">
          <%= image_tag image_medium_url(challenge),  class: "img-circle" %>
        </div>
      </div>
      <div class="col-xs-7 col-md-10">
        <h3><%= challenge.challenge %></h3>

        <div class="challenge-list-detail">
          <span class="challenge-badge <%= challenge.status_cd %>"><%= challenge.status_cd %></span>
          <span>&ensp;</span>
          <span class="glyphicon glyphicon-eye-open"></span> <%= challenge.page_views %> views &ensp; | &ensp;
          <span class="glyphicon glyphicon-user"></span> <%= challenge.participant_count %> participants &ensp; | &ensp;
          <span class="glyphicon glyphicon-list-alt"></span> <%= challenge.submission_count %> submissions
        </div>
      </div>
    </div>
  <% end %>
</li>
