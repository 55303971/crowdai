<content class="background-grey">
	<div class="row">
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'panel' } do |f| %>
			<fieldset>
				<div class="panel-body">
					<h3>Sign Up</h3>
          <%= render "shared/error_messages", :target => resource %>
					<p><strong>One account per individual.</strong> If you're joining as part of a company/organisation, please create an account for each individual.</p>
          <input type="text" name="participant[name]" placeholder="Display name">
          <input type="email" name="participant[email]" placeholder="Email address">
          <input type="text" name="participant[password]" placeholder="Choose a password">
          <input type="text" name="participant[password_confirmation]" placeholder="Re-type password">
					<p>By signing up, I agree to terms in the
            <%= link_to 'Terms of Service', page_path('terms') %>
            and <%= link_to 'Privacy Policy', page_path('privacy') %>
          </p>
          <button class="btn btn-primary" type="submit">Sign Up</button>
				</div>
				<div class="panel-footer">
					<p>Already registered? <a href="#">Log In</a></p>
				</div>
			</fieldset>
    <% end %>
	</div>
</content>
