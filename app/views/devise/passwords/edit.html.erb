<div class="container-medium-grey">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="row">
        <div class="centered-text">
          <h2>Change your password</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, autofocus: true, autocomplete: 'off', label: 'New password' %>
          <%= f.input :password_confirmation, autocomplete: 'off', label: 'Confirm password' %>
        </div>
        <br/>
        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block outline" %>
        </div>
        <% end %>
        <br/><br/>
        <br/><br/>
        <br/><br/>

      </div>
    </div>
  </div>
</div>
