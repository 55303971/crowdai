<% content_for(:sidebar) do %>
  <ul class="nav navbar-nav">
    <% if @article %>
      <% @article.article_sections.each do |section| %>
        <li><%= link_to section.section, article_path(@article, anchor: section.section.parameterize) %></li>
      <% end %>
    <% end %>
    <hr/>
    <% if current_participant && (current_participant.admin? || current_participant.id == @article.participant_id) %>
      <li><%= link_to 'Edit', edit_article_path(@article) %></li>
    <% end %>
  </ul>
<% end %>
