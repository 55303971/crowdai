<%= render partial: 'sidebar' %>

<div class="page-content-container">
  <% if current_participant %>
    <%= render partial: 'votes/vote_link', locals: { votable: @article } %>
  <% end %>

  <% @article.article_sections.each do |section| %>
    <div id='<%= section.section.parameterize %>'>
      <h1><%= section.section %></h1>
      <div class='markdown-wrap'>
        <%= section.description.html_safe if section.description %>
      </div>
    </div>
  <% end %>

  <%= render partial: 'comments/comments', locals: { commentable: @article, comments: @comments } %>
</div>
