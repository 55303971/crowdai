<%= render partial: 'sidebar' %>
<%= render partial: 'articles/form/header' %>

<div class="page-content-container">
  <% if current_participant %>
    <%= render partial: 'votes/vote_link', locals: { votable: @article } %>
  <% end %>

  <div id='new-section'></div>

  <% @article.article_sections.each do |section| %>
    <%= render partial: 'article_sections/show', locals: { article: @article, article_section: section } %>
  <% end %>

  <%#= render partial: 'comments/comments', locals: { commentable: @article, comments: @comments } %>
</div>
