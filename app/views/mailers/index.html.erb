<p id="notice"><%= notice %></p>

<h1>Mailers</h1>

<table>
  <thead>
    <tr>
      <th>Mailer</th>
      <th>Paused</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mailers.each do |mailer| %>
      <tr>
        <td><%= mailer.mailer %></td>
        <td><%= mailer.paused %></td>
        <td><%= link_to 'Show', mailer %></td>
        <td><%= link_to 'Edit', edit_mailer_path(mailer) %></td>
        <td><%= link_to 'Destroy', mailer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mailer', new_mailer_path %>
