    <table class='table table-hover table-striped table-bordered'>
      <thead>
        <tr>
          <th>Submitted</th>
          <th>Score</th>
          <th>Files</th>
        </tr>
      </thead>

      <tbody>
        <% @submissions.each do |submission| %>
          <tr>
            <td><%= link_to submission.created_at, competition_submission_path(@competition, submission) %></td>
            <td><%= link_to score(submission), competition_submission_path(@competition, submission) %></td>
            <td><% submission.submission_files.each do |f| %>
                    <%= f.submission_file_file_name %><br/>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
