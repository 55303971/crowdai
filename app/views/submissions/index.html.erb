<%= render partial: 'competitions/sidebar' %>
<%= render partial: 'competitions/header', competition: @competition %>

<div class="row">
  <div class="col-md-10">
<div class="panel panel-default">
  <div class="panel-heading">Submissions</div>
  <div class="panel-body">
    <p style="text-align:center">
        <%= link_to 'Submit Entry', new_competition_submission_path(@competition), class: 'btn btn-primary btn-lg' %>
    </p>
      <p><b>TODO: Change this text</b>
