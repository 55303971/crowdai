<div>
  <%= render partial: 'sidebar' %>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#overview" aria-controls="overview" role="tab" data-toggle="tab">Overview</a>
    </li>
    <li role="presentation">
      <a href="#evaluation" aria-controls="evalution" role="tab" data-toggle="tab">Evaluation</a>
    </li>
    <li role="presentation">
      <a href="#rules" aria-controls="rules" role="tab" data-toggle="tab">Rules</a>
    </li>
    <li role="presentation">
      <a href="#prizes" aria-controls="prizes" role="tab" data-toggle="tab">Prizes</a>
    </li>
    <li role="presentation">
      <a href="#resources" aria-controls="resources" role="tab" data-toggle="tab">Resources</a>
    </li>
    <li role="presentation">
      <a href="#datasets" aria-controls="datasets" role="tab" data-toggle="tab">Datasets</a>
    </li>
    <li role="presentation">
      <a href="#timeline" aria-controls="timelines" role="tab" data-toggle="tab">Timeline</a>
    </li>
    <li role="presentation">
      <a href="#submission-instructions" aria-controls="submission-instructions" role="tab" data-toggle="tab">Submission</a>
    </li>
  </ul>

  <!-- content -->
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <%= simple_form_for @competition do |f| %>
        <%= f.hidden_field :hosting_institution_id, value: current_user.hosting_institution_id %>

        <!-- Tab panes -->
        <div class="tab-content">
          <%= render 'competitions/form/overview', f: f %>
          <%= render 'competitions/form/evaluation', f: f %>
          <%= render 'competitions/form/rules', f: f %>
          <%= render 'competitions/form/prizes', f: f %>
          <%= render 'competitions/form/resources', f: f %>
          <%= render 'competitions/form/timeline', f: f %>
          <%= render 'competitions/form/submission_instructions', f: f %>
        </div>
      <% end %>

    </div>
  </div>

</div>
