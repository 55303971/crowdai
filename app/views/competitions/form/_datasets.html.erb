<div role="tabpanel" class="tab-pane" id="datasets">

  <h1>Datasets</h1>
  <%= f.simple_fields_for :datasets do |dataset| %>
    <%= render 'competitions/form/dataset_fields', f: dataset %>
    <%= dataset.simple_fields_for :file_attachments, FileAttachment.new do |attachment| %>
      <%= attachment.object %>
      <%= attachment.error_notification %>
      <div>
        <%#= attachment.file_attachment %>
      </div>

      <%# if attachment.file_attachment.present? %>
        <%#= attachment.check_box '_destroy' %> remove?
      <%# else %>
        <%#= attachment.label :file_attachment, "Add a file?" %>
      <%# end %>

      <%= attachment.file_field :file_attachments %>
    <% end %>

  <% end %>
  <%= link_to_add_association 'add dataset', f, :datasets,  html_options = { partial: 'competitions/form/dataset_fields', class: 'btn btn-default' } %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

</div>
