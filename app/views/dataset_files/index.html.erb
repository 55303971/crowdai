<%= render partial: 'competitions/sidebar' %>
<%= render partial: 'competitions/header', competition: @competition %>

<div class="row">
  <div class="col-md-8">
    <table class="table table-condensed table-bordered">
      <thead>
        <tr>
          <th></th>
          <th>Content</th>
          <th>Filename</th>
        </tr>
      </thead>

      <tbody>
        <% @competition.dataset_files.each do |file| %>
        <tr>
          <td><%= file.seq %></td>
          <td><%= file.description %></td>
          <td><%= download_url(file) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if current_user.admin? || current_user.hosting_institution_id = @competition.hosting_institution_id %>
      <%= link_to 'Add file', new_competition_dataset_file_path(@competition), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
