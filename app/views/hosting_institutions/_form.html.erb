<%= simple_form_for(@hosting_institution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :institution %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :contact_person %>
    <%= f.input :contact_phone %>
    <%= f.input :contact_email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
