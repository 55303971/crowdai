<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= simple_form_for(@hosting_institution) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :institution %>
      <%= f.input :address %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
    <% end %>
  </div>
</div>
