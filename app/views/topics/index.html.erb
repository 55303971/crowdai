<%= render partial: 'competitions/sidebar' %>
<%= render partial: 'competitions/header', competition: @competition %>


<blockquote>
  <p><%= link_to @headline_post.post, competition_topic_path(@competition, @headline_post.topic_id) %></p>
   <footer>Posted by <%= @headline_post.username %> in <cite><%= @headline_post.topic_text %></cite></footer>
</blockquote>



<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Topic
          <span class="pull-right"><%= link_to '+ New Topic', new_competition_topic_path(@competition), class: 'btn btn-primary' %></span>
      </th>
      <th>Posts</th>
      <th>Activity</th>
    </tr>
  </thead>

  <tbody>
    <% if @topics %>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= content_tag(:i, nil, class: 'fa fa-thumb-tack') if topic.sticky %>
            <%= link_to topic.topic, new_topic_post_path(topic) %>
            <% if current_user.admin? %>
              <span class="pull-right">
                <%= link_to 'Edit', edit_competition_topic_path(@competition,topic) %><br/>
                <%= link_to 'Destroy', [@competition,topic], method: :delete, data: { confirm: 'Are you sure?' } %>
              </span>
            <% end %>
          </td>
        <td><%= topic.posts.count %></td>
        <td><%= topic.last_activity %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
