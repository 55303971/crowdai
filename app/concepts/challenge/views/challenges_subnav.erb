<div class="sub-nav">
  <div class="row">
    <ul>
      <% ['All','Active','Completed'].each do |f| %>
        <% if challenge_filter == f.downcase %>
          <li class="active">
            <%= link_to challenges_path(challenge_filter: f.downcase) do %>
              <%= f %>
              &nbsp;
              <sup><%= challenges_count(f.downcase) %></sup>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to challenges_path(challenge_filter: f.downcase) do %>
              <%= f %>
              &nbsp;
              <sup><%= challenges_count(f.downcase) %></sup>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
