<div class="sub-nav">
  <div class="row">
    <ul>
      <% ['All','Active','Completed'].each do |filt| %>
        <% if challenge_filter == filt.downcase %>
          <li class="active">
            <%= link_to challenges_path(challenge_filter: filt.downcase) do %>
              <%= filt %>
              <sup><%= challenges_count(filt.downcase) %></sup>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to challenges_path(challenge_filter: filt.downcase) do %>
              <%= filt %>
              <sup><%= challenges_count(filt.downcase) %></sup>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
