<li>
  <div class="pic">
    <%= link_to challenge_path(challenge) do %>
      <%= concept(Image::Cell,challenge) %>
    <% end %>
  </div>
  <div class="details">
    <h5 class="ellipsis"><%= link_to challenge.challenge, challenge_path(challenge) %></h5>
    <p class="description ellipsis"><%= challenge.tagline %></p>
    <p class="status active"><%= remaining_text %></p>
  </div>
  <div class="stats">
    <%= concept(Challenge::Cell::Statistic,challenge,type: 'submission') %>
    <%= concept(Challenge::Cell::Statistic,challenge,type: 'participant') %>
    <%= concept(Challenge::Cell::Statistic,challenge,type: 'view') %>
  </div>
</li>
