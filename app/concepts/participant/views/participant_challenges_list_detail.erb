<li>
  <div class="pic">
    <%= link_to challenge_path(challenge) do %>
      <%= concept(Media::Cell,challenge,size: :medium) %>
    <% end %>
  </div>

  <div class="details">
    <h5><%= link_to challenge.challenge, challenge_path(challenge) %></h5>
    <p class="description"><%= challenge.tagline %></p>
    <p class="status active">XX days left</p>
  </div>
  <div class="stats">
    <div class="stat-fr">
      <%= challenge.submission_count %><br>
      <span>Submissions</span>
    </div>
    <div class="stat-fr">
      <%= challenge.participant_count %><br>
      <span>Participants</span>
    </div>
    <div class="stat-fr">
      <%= challenge.page_views %><br>
      <span>Views</span>
    </div>
  </div>
</li>
